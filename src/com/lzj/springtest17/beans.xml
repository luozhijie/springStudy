<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.lzj.springtest17"></context:component-scan>

    <bean id="customerBean" class="com.lzj.springtest17.Customer">
        <property name="action" value="buy"></property>
        <property name="type" value="1"></property>
    </bean>

    <bean id="personBean" class="com.lzj.springtest17.Person">
        <property name="name" value="luozhijie"></property>
        <property name="username" value="llllll"></property>
    </bean>

</beans>